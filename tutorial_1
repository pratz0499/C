#include<iostream>
using namespace std;

class check
{
    public:
        int n;
    void check_number()
    {
        if (n<0)
        {
            cout<<"The number is Negative";
        }
        else if (n==0)
        {
            cout<<"The number is Zero";
        }
        else
        {
            cout<<"The number is Positive";
        }
    }
    void even_odd()
    {
        if(n%2==0)
        {
            cout<<"The Number is Even";
        }
        else
        {
            cout<<"The Number is odd";
        }
    }
};








int main()
{
    check obj;
    cout<<"Enter the Number:";
    cin>>obj.n;

    obj.check_number();
    obj.even_odd();
    
    return 0;
};
