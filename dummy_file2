#include <stdio.h>
struct stack
{
    int top;
    int size;
    void *data[100];
};
int push(struct stack *s, void *item)
{
    if(s->top==s->size-1)
    {
        return 0;
    }
    else
    {
        s->top++;
        s->data[s->top]=item;
        return 1;
    }
}

int push(struct stack *f, void *item)
{
    if(f->top==f->size-1)
    {
        return 0;
    }
    else
    {
        f->top++;
        f->data[f->top]=item;
        return 1;
    }
}
int push(struct stack *c, void *item)
{
    if(c->top==c->size-1)
    {
        return 0;
    }
    else
    {
        c->top++;
        c->data[c->top]=item;
        printf("The element is being pushed\n\t");
        return 1;
    }
}

void *pop(struct stack *s,struct stack *f,struct stack *c, int *error)
{
    void *temp1;
    void *temp2;
    void *temp3;
    if(s->top==-1)
     {
      if(f->top==-1)
       {
   	if(c->top==-1)
	    {
	        *error = 1;
	    }
    else
    {
        temp1= s->data[s->top];
        s->top--;
	temp2= f->data[f->top];
	f->top--;
	temp3= c->data[c->top];
        c->top--;
        return ;
    }
}
 void display_int(struct stack s)
 {
   int i;
   for(i=s.top;i>=0;i--)
   {
        printf("%d",*(int *)s.data[i]);

   }

 }
 void display_float(struct stack f)
 {
     int  j;
     for(j=f.top;j>0;j--)
     {
          printf("%f",*(float*)f.data[j]);
     }
 }
 void display_str(struct stack c)
 {
     char k;
     for(k=c.top;k>0;k--)
     {
         printf("%c",*(char *)c.data[k]);
     }
 }

void main()
{
    int error=0,n,h,l,p;
    struct stack s={-1,100};
    struct stack f={-1,100};
    struct stack c={-1,100};
    printf("\n\t 1.Integer\n\t 2.Float\n\t 3.character");
    printf("Enter the type of stack: ");
    scanf("%d",&x);
    printf("STACK MENU");
    printf("\n\t 1.PUSH\n\t 2.POP\n\t");
    printf("Enter the choice: ");
    scanf("%d",&choice);

    switch(x)
    {
     case 1: for(h=0;h<n;h++)
                {
		  	int item[h];
			 printf("Enter the element: ");
			 scanf("%d",&item[h]);
			 push(&s,&f,&item[h]);
			         if(error)
		  	            {
				      printf("Stack Empty");
	        		     }
	                 display_int(s);
	                 break;
               }
     
     case 2:   for(l=0;l<n;l++)
	          {
		        int item[l];
		        printf("Enter the element:\n ");
		        scanf("%d",&item[l]);
		        push(&f,&item[l]);
			        if(error)
	                           {
	          		      printf("Stack Empty");
	       			    }
		        display_float(f);
	                break;
	           }

     case 3:  for(p=0;p<n;p++)
             	 {
	                char item[p];
	                printf("Enter the element: \n");
	             	scanf("%c",&item[p]);
	    		push(&c,&item[p]);
		                if(error)
			            {
	 	             	      printf("Stack is Empty");
				    }
			 display_str(c);
 			 break;
	          }

    	switch(choice)
        {
     	   case 1: while( switch(x);)
       		   break;
           case 2: struct stack s; 
		   pop(&s,&f,&c);
        }



}





