#include<stdio.h>
#include<stdlib.h>
struct stack
{
    int top;
    int size;
    void *data[100];
};
int push(struct stack *s, void *item)
{
    if(s->top==s->size-1)
    {
        return 0;
    }
    else
    {
        s->top++;
        s->data[s->top]=item;
        printf("pushed\n");
        return 1;
    }
}
void *pop(struct stack *s, int *error)
{
    void *temp;
    if(s->top==-1)
    {
        *error = 1;
    }
    else
    {
        s->data[s->top]=temp;
        s->top--;
        return temp;
    }
}
 void display_int(struct stack s)
 {
   int i;
   for(i=s.top;i>=0;i--)
   {
        printf("%d",*(int *)s.data[i]);

   }

 }
 void display_float(struct stack f)
 {
     int  j;
     for(j=f.top;j<=0;j--)
     {
          printf("%f",*(float*)f.data[j]);
     }
 }
 void display_str(struct stack c)
 {
     int k;
     for(k=c.top;k>=0;k--)
     {
         printf("%c",*(char *)c.data[k]);
     }
 }

void main()
{
    int error=0,item[100],n,h,x,choice;
    struct stack s={-1,100};
    struct stack f={-1,100};
    struct stack c={-1,100};
    printf("STACK MENU");
    printf("\n1.Integer\n2.float\n3.character\n");
    scanf("%d",&x);
    while(choice!=4)
    {
	    printf("\n1.PUSH\n2.POP\n3.DISPLAY\n4.EXIT\n");
	    printf("Enter the choice \n");
	    scanf("%d",&choice);
	   	 switch(choice)
 	  	 {

                    case 1:  printf("Enter the n time: ");
                             scanf("%d",&n);
                             for(h=0;h<n;h++);
                              {
		               printf("Enter the element: ");
			       scanf("%d",&item[h]);
			       int a = push(&s,&item[h]);
    		                break;
                              }
		    case 2:  pop(&s,&error);
 	        	     if(error)
  	          	     {
 	          	       printf("STACK EMPTY");
  	                     }
       		   	      break;

		    case 3: display_int(s);
                            break;

 		            display_float(f);
                            break;

		            display_str(c);
	        	    break;

	 	    case 4: exit(0);
        	            break;

		    default : printf("INVALID OPTION OF CHOICE");
		              break;

    }
  }
}


